@{
    ViewBag.Title = "Index";
    var dm_nguoi_dung = ViewBag.v_user as List<List<BKI_CRM2.Models.User>>;
    var state = ViewBag.state as List<BKI_CRM2.Models.UserGroup>;

}
<style>
    .mau {
        width: 100px;
    }

    .marginleft {
        margin-left: 300px;
    }

    .width220px {
        width: 220px;
    }

    .height_input {
        height: 34px !important;
    }

    .width100px {
        width: 100px;
    }
</style>
<div class="title">
    <h2>DANH MỤC NGƯỜI DÙNG</h2>
</div>

<div style="margin: 20px 0px 30px 30px;">
    <button type="button" class="btn btn-primary " aria-hidden="true" style="margin-left:300px;" data-toggle="modal" data-target="#thay_doi">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>Thêm người dùng
    </button>

    <select id="thuc_hien" style="margin-left:200px;">
        <option></option>
        <option value="xuat_excel">Xuất Excel</option>
        <option value="in">In</option>
    </select>
</div>
<div style="margin-bottom:50px;">
    <ul class="nav nav-tabs">
        @if (state != null && state.Count > 0)
        {
            <li class="active"><a data-toggle="tab" href="#@state[0].Id">@state[0].GroupName</a></li>
            foreach (var item in state.Skip(1))
            {
                <li><a data-toggle="tab" href="#@item.Id">@item.GroupName</a></li>
            }
        }
    </ul>
    <div class="tab-content">


        @if (dm_nguoi_dung != null && dm_nguoi_dung.Count > 0)
        {
            <div class="tab-pane fade in active" id="@state[0].Id">
                <table class="mytable">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Họ và đệm</th>
                            <th>Tên</th>
                            <th>Số điện thoại</th>
                            <th>Email</th>
                            <th>Username</th>
                            <th>Password</th>
                            <th>Sửa</th>
                            <th>Xóa</th>
                        </tr>
                    </thead>
                    <tbody class="ctn">
                        @if (dm_nguoi_dung[0].Count > 0)
                        {
                            foreach (var item in dm_nguoi_dung[0])
                            {
                                <tr id="@item.Id">
                                    <td class="c"><input type="checkbox" /></td>
                                    <td class="ho">@item.HoNhanVien</td>
                                    <td class="ten">@item.TenNhanVien</td>
                                    <td class="sdt">@item.Sdt01</td>
                                    <td class="email">@item.Email</td>
                                    <td class="username">@item.UserName</td>
                                    <td class="password">@item.Password</td>
                                    <td><button type="button" class="btn btn-default" onclick="sua('@item.Id')"><span class="glyphicon glyphicon-pencil edit" aria-hidden="true"></span></button></td>
                                    <td><button type="button" class="btn btn-default" onclick="hienxoa('@item.Id')"><span class="glyphicon glyphicon-trash delete" aria-hidden="true"></span></button></td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
            for (int i = 1; i < dm_nguoi_dung.Count; i++)
            {
                <div class="tab-pane fade" id="@state[i].Id">
                    <table class="mytable">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Họ và đệm</th>
                                <th>Tên</th>
                                <th>Số điện thoại</th>
                                <th>Email</th>
                                <th>Username</th>
                                <th>Password</th>
                                <th>Sửa</th>
                                <th>Xóa</th>
                            </tr>
                        </thead>
                        <tbody class="ctn">
                            @if (dm_nguoi_dung[i].Count > 0)
                            {
                                foreach (var item in dm_nguoi_dung[i])
                                {
                                    <tr id="@item.Id">
                                        <td class="c"><input type="checkbox" /></td>
                                        <td class="ho">@item.HoNhanVien</td>
                                        <td class="ten">@item.TenNhanVien</td>
                                        <td class="sdt">@item.Sdt01</td>
                                        <td class="email">@item.Email</td>
                                        <td class="username">@item.UserName</td>
                                        <td class="password">@item.Password</td>
                                        <td><button type="button" class="btn btn-default" onclick="sua('@item.Id')"><span class="glyphicon glyphicon-pencil edit" aria-hidden="true"></span></button></td>
                                        <td><button type="button" class="btn btn-default" onclick="hienxoa('@item.Id')"><span class="glyphicon glyphicon-trash delete" aria-hidden="true"></span></button></td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            }
        }
    </div>
</div>
<!-- Modal sửa -->
<div class="modal fade" id="thay_doi">
    <div class="modal-dialog modal-lg" id="thongtinlienhe">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h3 class="modal-title title">THÔNG TIN NGƯỜI DÙNG</h3>
            </div>
            <div class="modal-body">
                <div class="container">
                    <table class="table table-condensed table-font-size " style="margin-top:20px;width:85%; ">
                        <tr>
                            <td rowspan="4">
                                <label class=" padding"  style="line-height: 36px;">Ảnh cá nhân</label>
                            </td>
                            <td rowspan="4">
                                <img src="" alt="Ảnh" style="max-width:200px; height:160px;" id="anh">
                                <input type="file" onchange="upanh($('#thay_doi').attr('name'));" value="Upload" id="image" />
                            </td>
                            <td>
                                <label class="width100px " style="line-height: 36px;">Username</label>
                            </td>
                            <td>
                                <input type="text" placeholder="Nhập Username" class="form-control width220px height_input " style="height:34px !important;" id="username" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label class="width100px left padding"  style="line-height: 36px;">Nhập Password</label>
                            </td>
                            <td>
                                <input type="text" placeholder="Nhập password" class="form-control width220px height_input " style="height:34px !important;" id="password" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label class="width100px left padding"  style="line-height: 36px;">Điện thoại</label>
                            </td>
                            <td>
                                <input type="tel" placeholder="Nhập số điện thoại" class="form-control width220px height_input " style="height:34px !important;" id="sdt" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label class="padding"  style="line-height: 36px;">ĐT nhà riêng</label>
                            </td>
                            <td>
                                <input type="tel" placeholder="Nhập số ĐT nhà riêng" class="form-control width220px height_input " style="height:34px !important;" id="sdt2" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label class="width100px left padding"  style="line-height: 36px;">Họ và đệm</label>
                            </td>
                            <td>
                                <input type="text" placeholder="Nhập Họ và đệm" class="form-control width220px height_input " style="height:34px !important;" id="hodem" />
                            </td>
                            <td>
                                <label class="padding"  style="line-height: 36px;">Email</label>
                            </td>
                            <td>
                                <input type="email" placeholder="Nhập địa chỉ Email" class="form-control width220px height_input " style="height:34px !important;" id="email" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label class="width100px left padding"  style="line-height: 36px;">Tên</label>
                            </td>
                            <td>
                                <input type="text" placeholder="Nhập Tên người dùng" class="form-control width220px height_input " style="height:34px !important;" id="ten" />
                            </td>
                            <td>
                               
                            </td>
                            <td>
                              
                            </td>
                        </tr>
                       
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-warning" id="clear">Xóa trắng</button>
                <button type="button" class="btn btn-primary" onclick="thuchiensua($('#thay_doi').attr('name'));">Lưu lại</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<!--Modal xóa-->
<div class="modal fade" id="xoa">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">XÁC NHẬN</h4>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn xóa dòng dữ liệu này không?</p>
                <div id="giatri" style="display:none;"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="xoa($('#giatri').html())">Đồng ý</button>
                <button type="button" class="btn btn-default" data-dismiss="modal" aria-hidden="true">Đóng</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<script>
    $(document).ready(function () {
        $('#clear').click(function () {
            clear();
        });
        $('#thay_doi').on('hidden.bs.modal', function () {
            clear();
        });
        $('#switch').on('hidden.bs.modal', function () {
            clearflag();
        });
        $("#thuc_hien").select2({
            placeholder: "Thực hiện",
            allowClear: true
        });
        $("#loc_khach_hang").select2({
            placeholder: "Lọc khách hàng",
            allowClear: true
        });

        $("#gioitinh").select2({
            placeholder: "Chọn giới tính",
            allowClear: true
        });

        $("#loaikhachhang").select2({
            placeholder: "Chọn loại khách hàng",
            allowClear: true
        });
        $("#account").select2();
        $('.mytable').dataTable();
    });
    function upanh(id) {
        var data = new FormData();
        var files = $("#image").get(0).files;
        if (files.length > 0) {
            data.append("HelpSectionImages", files[0])
        }
        $.ajax({
            url: "/Contact/GetFileRequest",
            type: "POST",
            processData: false,
            contentType: false,
            data: data,
            success: function (response) {
                d = new Date();
                var t = response.split('%');
                anh.src = t[0] + "?" + d.getTime();
                anh.name = t[1];
            },
            error: function () {
                alert('Không upload được ảnh!');
            }

        });
    }
    function thuchiensua(id_kh) {
        var hoten = $('#hoten').val().trim();
        var masothue = $('#masothue').val().trim();
        var idloaikhachhang = $('#loaikhachhang').val();
        var sdt01 = $('#sdt').val().trim();
        var sdt02 = $('#sdt2').val().trim();
        var email = $('#email').val().trim();
        var diachi = $('#diachi').val().trim();
        var hankhachhang = $('#hankh').val().trim();
        var gioitinh = $('#gioitinh').val().trim();
        var ngaysinh = $('#ngaysinh').val().trim();
        var sotaikhoan = $('#stk').val().trim();
        var website = $('#w').val().trim();
        var facebook = $('#fb').val().trim();
        var skype = $('#skype').val().trim();
        var image = $('#anh').attr('src').trim();
        var path = $('#anh').attr('name');
        var account = $('#account').val();
        $.ajax({
            url: "/Contact/Update",
            type: "POST",
            data: {
                id: id_kh,
                hoten: hoten,
                diaChi: diachi,
                gioiTinh: (gioitinh == "nam" ? true : false),
                image: image,
                facebook: facebook,
                skype: skype,
                ngaySinh: ngaysinh,
                sdt01: sdt01,
                sdt02: sdt02,
                maSoThue: masothue,
                soTaiKhoan: sotaikhoan,
                website: website,
                email: email,
                hanKhachHang: hankhachhang,
                idLoaiKhachHang: idloaikhachhang,
                idTrangThaiHienTai: null,
                path: path,
                idAccount: account
            },
            error: function () {
                alert("Có lỗi");
            },
            success: function (data) {
                alert("Thành công!");
                $.ajax({
                    url: "/Contact/Index",
                    type: "Get",
                    success: function (view) {
                        $('#thay_doi').one('hidden.bs.modal', function () {
                            $('#body').html(view);
                        }).modal('hide');
                    }
                });
            }
        });
    }
    function clear() {
        $('#thongtinlienhe').find('input').val('');
        $('#loaikhachhang,#gioitinh,#account').select2('data', null);
        $('#thuc_hien').select2({
            placeholder: 'Thực hiện',
            allowClear: true
        });
        $('#loc_khach_hang').select2({
            placeholder: 'Lọc khách hàng',
            allowClear: true
        });
    }
    function clearflag() {
        $('#par').html("<select id='trangthaichuyen'></select>");
        $('#switch').modal('hide');
    }
    function sua(id_kh) {
        $('#thay_doi').attr('name', id_kh);
        $.ajax({
            url: "/Contact/Select",
            type: "GET",
            data: { IdContact: id_kh },
            error: function () {
                alert('Lấy thông tin thất bại!');
            },
            success: function (get) {
                if (get != undefined && get != true) {
                    hoten.value = get.ho.trim() + ' ' + get.ten.trim();
                    email.value = get.email.trim();
                    sdt.value = get.sdt01.trim();
                    sdt2.value = get.sdt02.trim();
                    diachi.value = get.diachi.trim();
                    hankh.value = get.hankhachhang.trim();
                    masothue.value = get.masothue.trim();
                    fb.value = get.facebook.trim();
                    skype.value = get.skype.trim();
                    gioitinh.value = get.gioitinh ? "nam" : "nu";
                    ngaysinh.value = get.ngaysinh.trim();
                    anh.src = get.image.trim();
                    stk.value = get.sotaikhoan.trim();
                    w.value = get.website.trim();
                    loaikhachhang.value = get.idloaikhachhang;
                    account.value = get.idaccount == -1 ? null : get.idaccount;
                    $("#gioitinh").select2({
                        placeholder: "Chọn giới tính",
                        allowClear: true
                    });
                    $("#loaikhachhang").select2({
                        placeholder: "Chọn loại khách hàng",
                        allowClear: true
                    });
                    $("#account").select2({
                        placeholder: "Chọn tổ chức",
                        allowClear: true
                    });
                }
                $('#thay_doi').modal('show');
            }
        });
    }
    function xoa(id_kh) {
        $.ajax({
            url: "/Contact/Delete",
            type: "POST",
            data: { id_kh: id_kh },
            dataType: "json",
            error: function () {
                alert("Xóa thất bại!");
                $('#xoa').modal('hide');
            },
            success: function (data) {
                alert('Xóa thành công!');
                $('#' + id_kh).remove();
                $('#xoa').modal('hide');
            }
        });
    }
    function hienxoa(id_kh) {
        giatri.innerHTML = id_kh;
        $('#xoa').modal('show');
    }
    function chuyen(id_kh) {
        $('#switch').attr('name', id_kh);
        $.ajax({
            url: "/Contact/GetState",
            type: "GET",
            data: { IdContact: id_kh },
            error: function () {
                alert('Lấy thông tin thất bại!');
            },
            success: function (data) {
                $('#trangthaihientai').html(data.state);
                var str = "";
                if (data.states.length > 0) {
                    for (i = 0; i < data.states.length; i++) {
                        str += "<option value='" + data.states[i] + "'>" + data.states_name[i] + "</option>";
                    }

                    $('#trangthaichuyen').html(str);
                    $('#trangthaichuyen').select2();
                }
                else $('#par').html("<strong>Không thể chuyển</strong>");
                $('#switch').modal('show');
            }
        });
    }
    function thuchienchuyen(id_kh) {
        if ($('#par').find('strong').html() != undefined) {
            alert('Trạng thái không đổi');
            $('#switch').modal('hide');
        }
        else {
            var state = $('#trangthaichuyen').val();
            $.ajax({
                url: "/Contact/SwitchState",
                type: "POST",
                data: { IdContact: id_kh, IdTrangThai: state },
                error: function () {
                    alert('Có lỗi');
                },
                success: function (data) {
                    if (data == true) {
                        alert('Thành công!');
                        $.ajax({
                            url: "/Contact/Index",
                            type: "Get",
                            success: function (view) {
                                $('#switch').one('hidden.bs.modal', function () {
                                    $('#body').html(view);
                                }).modal('hide');
                            }
                        });
                    }
                    else { alert('Có lỗi'); $('#switch').modal('hide'); }
                }
            });
        }
    }
    function filter(id) {
        if (id == null || id == "" || id == undefined) $('tr').show();
        else {
            $(".ctn").find('tr').hide();
            $(".ctn").find("tr[name='" + id + "']").show();
        }
    }
</script>
