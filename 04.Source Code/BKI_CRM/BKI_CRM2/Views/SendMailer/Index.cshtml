@model BKI_CRM2.Models.MailModel
@{
    ViewBag.Title = "Index";
}

<script>
    $(document).ready(function () {
        if ('@ViewBag.Message' == 'Sent') {
            alert('Mail has been sent successfully');
        }
    });
</script>

<div class="title">
    <h2>GỬI EMAIL</h2>
</div>
<style>
    .styling {
        width:300px;
        border-radius:2px;
    }

</style>

@using (@Html.BeginForm("Index", "SendMailer", FormMethod.Post, new { @id = "form1", @enctype = "multipart/form-data" })) { @Html.ValidationSummary()
     
<div class="container">
 <table class="table table-condensed table-font-size">
	<tbody>
		<tr>
			<td><label>Gửi tới:</label></td>
			<td>@Html.TextBoxFor(m => m.To, new{ Class= "styling"})</td>
            <td>@Html.ValidationMessageFor(m => m.To)</td>
		</tr>
		<tr>
			<td><label>Chủ đề:</label></td>
			<td>@Html.TextBoxFor(m => m.Subject, new{ Class= "styling"})</td>
		</tr>
		<tr>
			<td><label>Nội dung:</label></td>
			<td>@Html.TextAreaFor(m => m.Body, new{ Class= "styling", rows=10})</td>
		</tr>
        <tr>
			<td><label>Đính kèm tệp:</label></td>
			<td><input name="fileUploader" type="file" /></td>
		</tr>
        <tr>
            <td><input type="submit" value="Send" class="btn btn-primary" style="width:100px;"/></td>
        </tr>
	</tbody>
 </table>
</div>
}